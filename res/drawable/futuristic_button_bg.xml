<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/cyber_red"
                android:endColor="@color/neon_red"
                android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/cyber_red" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/neon_blue"
                android:endColor="@color/cyber_blue"
                android:type="linear" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/neon_blue" />
        </shape>
    </item>
</selector>