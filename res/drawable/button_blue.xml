<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/clickable_color" />
            <stroke
                android:width="3.0dip"
                android:color="@color/gris" />
            <corners
                android:radius="3.0dip" />
            <padding
                android:left="10.0dip"
                android:top="10.0dip"
                android:right="10.0dip"
                android:bottom="10.0dip" />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffeeeeee"
                android:endColor="#ffffffff"
                android:angle="270.0" />
            <stroke
                android:width="3.0dip"
                android:color="#ffdddddd" />
            <corners
                android:radius="3.0dip" />
            <padding
                android:left="10.0dip"
                android:top="10.0dip"
                android:right="10.0dip"
                android:bottom="10.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:angle="270.0"
                android:color="@color/azul" />
            <stroke
                android:width="3.0dip"
                android:color="@color/grisClaro" />
            <corners
                android:radius="3.0dip" />
            <padding
                android:left="10.0dip"
                android:top="10.0dip"
                android:right="10.0dip"
                android:bottom="10.0dip" />
        </shape>
    </item>
</selector>