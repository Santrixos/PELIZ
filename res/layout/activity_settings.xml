<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/gris"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/grisClaro"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ReproducciÃ³n" />
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardMaxElevation="@dimen/cardview_default_elevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/rl_predeterminado"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selectable_draw">
            <TextView
                android:textColor="@color/blanco"
                android:ellipsize="end"
                android:padding="10.0dip"
                android:layout_width="267.0dip"
                android:layout_height="wrap_content"
                android:text="@string/default_player"
                android:maxLines="1" />
            <androidx.appcompat.widget.SwitchCompat
                android:theme="@style/SwitchTheme"
                android:gravity="center"
                android:id="@id/switch_player"
                android:layout_width="53.0dip"
                android:layout_height="40.0dip"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/grisClaro"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Descargas" />
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardMaxElevation="@dimen/cardview_default_elevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:id="@id/ll_descargas"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selectable_draw">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/blanco"
                    android:ellipsize="end"
                    android:paddingLeft="10.0dip"
                    android:paddingTop="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_volum"
                    android:maxLines="1" />
                <TextView
                    android:textSize="12.0sp"
                    android:textColor="@color/grisClaro"
                    android:ellipsize="end"
                    android:id="@id/tv_ruta"
                    android:paddingLeft="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_volum"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:id="@id/previous_downloads"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selectable_draw">
                <TextView
                    android:textColor="@color/blanco"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Descargas de versiones anteriores a 3.7.0" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/grisClaro"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="General" />
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardMaxElevation="@dimen/cardview_default_elevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@id/rl_update"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selectable_draw">
            <ProgressBar
                android:id="@id/progressBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:progressDrawable="@drawable/mini_progressbar"
                android:layout_alignTop="@id/tv_update"
                android:layout_alignBottom="@id/tv_update"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
            <TextView
                android:textColor="@color/blanco"
                android:id="@id/tv_update"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selectable_draw"
                android:text="Buscar actualizaciones" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/grisClaro"
        android:layout_gravity="center"
        android:id="@id/tv_version"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>