<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    android:background="@color/netsney_black"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Hero Background Image -->
    <ImageView
        android:id="@+id/iv_hero_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:alpha="0.7" />
    
    <!-- Dark Gradient Overlay -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient_black_overlay" />
    
    <!-- Content Container -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">
        
        <!-- NETSNEY Logo/Title -->
        <TextView
            android:id="@+id/tv_hero_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NETSNEY"
            android:textColor="@color/netsney_white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/netsney_black"
            android:shadowRadius="12" />
        
        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_hero_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlimited Movies &amp; Series"
            android:textColor="@color/netsney_light_gray"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />
        
        <!-- Play Button (Optional) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            
            <TextView
                android:id="@+id/tv_play_button"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="▷ Play"
                android:textColor="@color/netsney_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/netsney_white"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/tv_info_button"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="ⓘ Info"
                android:textColor="@color/netsney_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/netsney_dark_gray"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
                
        </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>