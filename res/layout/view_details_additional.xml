<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="16.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="@color/v3_details_additional_delimiter"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="32.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginBottom="16.0dip">
        <ToggleButton
            android:id="@id/watched"
            android:padding="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:textOn="@null"
            android:textOff="@null"
            android:minWidth="0.0dip"
            android:minHeight="0.0dip"
            android:drawableLeft="@drawable/ic_visibility_selector"
            android:drawablePadding="0.0dip"
            android:drawableStart="@drawable/ic_visibility_selector"
            style="@style/Widget.AppCompat.ActionButton" />
        <Button
            android:textColor="@color/blanco"
            android:id="@id/btn_trailer"
            android:nextFocusUp="@id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trailer"
            android:drawableLeft="@drawable/ic_movie_wrapper"
            app:backgroundTint="@color/azul" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip">
        <TextView
            android:textColor="#ffffffff"
            android:id="@id/additional_description"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/v3_details_additional_delimiter"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/ll_buttons"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@color/blanco"
                android:id="@id/btn_temp"
                android:nextFocusUp="@id/btn_trailer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_keyboard_wrapper"
                android:layout_weight="1.0"
                app:backgroundTint="@color/azul" />
            <Button
                android:textColor="@color/blanco"
                android:id="@id/btn_cap"
                android:nextFocusUp="@id/btn_trailer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_keyboard_wrapper"
                android:layout_weight="1.0"
                app:backgroundTint="@color/grisClaro" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>